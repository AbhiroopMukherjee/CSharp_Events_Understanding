<UserControl x:Class="CommBetweenComponents.Controllers.EmployessOnJob"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommBetweenComponents.Controllers"
             mc:Ignorable="d" FontSize="30"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView x:Name="EmployeeListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Emp Name" DisplayMemberBinding="{Binding Path=Name}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
